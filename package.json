{
	"name": "text.0w.nz",
	"version": "2.0.0",
	"author": "xero & Andy Herbert",
	"description": "web based text art editor (ansi, ascii, xbin)",
	"license": "MIT",
	"keywords": [
		"ansi",
		"ascii",
		"xbin",
		"art",
		"textart",
		"textmode",
		"ansi-editor",
		"ascii-editor",
		"web",
		"blocktronics",
		"highrez",
		"scene",
		"sceneart"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/xero/moebius-web"
	},
	"type": "module",
	"main": "server.js",
	"scripts": {
		"bake": "cat banner; vite build --emptyOutDir && cp -r public/fonts dist/ui",
		"bake:net": "cat banner; vite build --emptyOutDir && cp -r public/fonts dist/ui && cp public/js/worker.js dist/ui",
		"server": "cat banner; node server.js",
		"lint": "eslint public/js/**/*.js",
		"lint:fix": "eslint public/js/**/*.js --fix",
		"format": "prettier --write public/js/**/*.js",
		"format:check": "prettier --check public/js/**/*.js"
	},
	"dependencies": {
		"express": "^4.21.2",
		"express-session": "^1.18.2",
		"express-ws": "^5.0.2"
	},
	"devDependencies": {
		"cssnano": "^7.1.1",
		"cssnano-preset-advanced": "^7.0.9",
		"eslint": "^9.35.0",
		"@stylistic/eslint-plugin": "^5.3.1",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.13",
		"@tailwindcss/postcss": "^4.1.13",
		"vite": "^7.1.5"
	}
}
