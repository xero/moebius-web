{
	"name": "text.0w.nz",
	"version": "2.0.0",
	"author": "xero & Andy Herbert",
	"description": "web based text art editor (ansi, ascii, xbin)",
	"license": "MIT",
	"keywords": [
		"ansi",
		"ascii",
		"xbin",
		"art",
		"textart",
		"textmode",
		"ansi-editor",
		"ascii-editor",
		"web",
		"blocktronics",
		"highrez",
		"scene",
		"sceneart"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/xero/moebius-web"
	},
	"type": "module",
	"main": "server.cjs",
	"engines": {
		"node": ">=22.19.0 <23"
	},
	"scripts": {
		"bake": "cat banner; vite build --emptyOutDir && cp -r public/fonts dist/ui",
		"bake:net": "cat banner; vite build --emptyOutDir && cp -r public/fonts dist/ui && cp public/js/worker.js dist/ui",
		"server": "cat banner; bun server.cjs",
		"lint": "cat banner; eslint public/js/**/*.js",
		"lint:fix": "cat banner; eslint public/js/**/*.js --fix",
		"format": "cat banner; prettier --write public/js/**/*.js",
		"format:check": "cat banner; prettier --check public/js/**/*.js",
		"test:unit": "cat banner; vitest run"
	},
	"dependencies": {
		"express": "^4.21.2",
		"express-session": "^1.18.2",
		"express-ws": "^5.0.2"
	},
	"devDependencies": {
		"@stylistic/eslint-plugin": "^5.3.1",
		"@tailwindcss/postcss": "^4.1.13",
		"@testing-library/jest-dom": "^6.8.0",
		"@vitest/coverage-v8": "3.2.4",
		"cssnano": "^7.1.1",
		"cssnano-preset-advanced": "^7.0.9",
		"eslint": "^9.35.0",
		"jsdom": "^27.0.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.13",
		"vite": "^7.1.5",
		"vitest": "^3.2.4"
	}
}
